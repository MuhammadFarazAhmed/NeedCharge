<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <stroke android:color="#747474" android:width="1.16dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <ripple android:color="@color/black_overlay">
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="@color/simple_button_bg_clr_1" android:width="1.16dp"/>
                    <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle" android:tint="#30000000" android:tintMode="src_over">
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <stroke android:color="@color/simple_button_bg_clr_1" android:width="1.16dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <stroke android:color="@color/simple_button_bg_clr_1" android:width="1.16dp"/>
        </shape>
    </item>


</selector>
